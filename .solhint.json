{
  "extends": "solhint:recommended",
  "rules": {
    "max-line-length": ["error", 80],
    "compiler-version": ["error", "=0.8.10 || ^0.8.0 || ^0.6.12 || ^0.5.12"],
    "no-inline-assembly": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  }
}
