{
  "extends": "solhint:recommended",
  "rules": {
    "max-line-length": "off",
    "compiler-version": ["error", "=0.8.18 || ^0.8.18"],
    "no-inline-assembly": "off",
    "not-rely-on-time": "off",
    "no-empty-blocks": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  }
}
